-#  This file is app/views/movies/index.html.haml
%h1 All Movies

= form_tag movies_path, :method => :get, id: 'ratings_form' do
  Include:
  - @all_ratings.each do |rating|
    - if rating == 'hidden'
      = hidden_field_tag "ratings[#{rating}]", true, id: "ratings_#{rating}"
    - else
      = check_box_tag "ratings[#{rating}]", 'yes', @rating_filter.include?(rating), id: "ratings_#{rating}"
      = rating
  = submit_tag 'Refresh', id: 'ratings_submit'

%table#movies
  %thead
    %tr
      %th= link_to 'Movie Title', movies_path(sort_by: 'title'), id: 'title_header'
      %th= link_to 'Release Date', movies_path(sort_by: 'release_date'), id: 'release_date_header'
      %th Rating
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.release_date.strftime("%Y %b %d")
        %td= movie.rating
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path