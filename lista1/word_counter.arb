def count_words (orig_text)
    text = orig_text.downcase.scan(/\w+/)
    h = Hash.new
    text.each do |word|
        if h[word] == nil then h[word] = 1
        else h[word] += 1
        end
    end
    h
end

puts count_words("A man, a plan, a canal -- Panama") # => {'a' => 3, 'man' => 1, 'canal' => 1, 'panama' => 1, 'plan' => 1}
puts count_words("Doo bee doo bee doo") # => {'doo' => 3, 'bee' => 2}
